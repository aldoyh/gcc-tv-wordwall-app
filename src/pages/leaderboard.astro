---
import Layout from '../components/Layout.astro';

const response = await fetch('http://localhost:8888/php-backend/api.php?action=get_leaderboard');
const leaderboard = await response.json();
---

<Layout title="Leaderboard">
  <h1>Leaderboard</h1>
  <table>
    <thead>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Score</th>
      </tr>
    </thead>
    <tbody>
      {leaderboard.map((entry, index) => (
        <tr>
          <td>{index + 1}</td>
          <td>{entry.name}</td>
          <td>{entry.score}</td>
        </tr>
      ))}
    </tbody>
  </table>
</Layout>

<style>
  table {
    width: 100%;
    border-collapse: collapse;
  }
  th, td {
    border: 1px solid #ccc;
    padding: 8px;
    text-align: left;
  }
  th {
    background-color: #f2f2f2;
  }
</style>
